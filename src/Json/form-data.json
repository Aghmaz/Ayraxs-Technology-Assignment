{
  "fields": [
    {
      "name": "name",
      "label": "First name",
      "type": "text",
      "placeholder": "Aghmaz asad sani",
      "validation": {
        "required": true,
        "minLength": 3
      }
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "placeholder": "demo@gmail.com",
      "validation": {
        "required": true,
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
      }
    },
    {
      "name": "password",
      "label": "Password",
      "type": "password",
      "placeholder": "*******",
      "validation": {
        "required": true,
        "minLength": 6
      }
    }
  ]
}